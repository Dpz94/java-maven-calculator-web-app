pipeline {
    agent any
    stages {
        stage ('checkout code & verify') {
            steps {
                sh 'git checkout'
                sh 'ls'
            }            
        }
        stage ('verify code present') {
            steps {
                sh 'ls'
            }
        }
        stage ('run test') {
          when {
            expression {
              params.action == "test" || params.action == "all"
            }
          }
          steps {
            sh 'mvn clean test'
          }
        }
        stage ('compile code') {
            when {
              expression {
                params.action == "compile" || params.action == "all"
                }
            }   
            steps {
                sh 'mvn compile'
            }
        }
        stage ('package code') {
            when {
              expression {
                params.action == "pacakge" || params.action == "all"
                }
            }           
            steps {
                sh 'mvn package'
            }
        }
        stage ('deploy the code') {
            when {
              expression {
                params.deployment == true
                }
            }                
            steps {
              echo "Code has been deployed"
            }
        }
    }
}
